<%= form_for @song do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :artist %>
  <%# <%= f.collection_select :artist_name, Artist.all, :name, :name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>"></option>
      <% end %>
  </datalist><br>
  <%= f.label :genre %>
  <%= f.text_field :genre_name, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>"></option>
    <% end %>
  </datalist><br>

  <%= f.submit %>

<% end %>
